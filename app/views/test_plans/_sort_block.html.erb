<span class="label"><%= t(:sort_by) %></span>
<span class="sort-value"><%= text_for_sorting %></span>
<% unless @column_visibility.nil? %>
<% unless @column_visibility.sort_order.nil? %>
  <span class="fa fa-caret-<%= sorting_arrow %>"></span>
  <span class="fa fa-times cancel cancel_sort"
        data-columnable='<%= @column_visibility.id %>'></span>
<% end %>
<% end %>