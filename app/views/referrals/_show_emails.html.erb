<div class="modal-dialog select-project-members">
  <div class="modal-content  container">
    <div class="title-block title-main">
      <h3 class="title"><%= t 'choose_emails_to_send_a_referral_link' %></h3>
      <span class="close">
        <span class='icon-close-icon'></span>
      </span>
    </div>
    <div class="modal-content-scroll">
      <div class="modal-body">
        <div class="row">
          <div class="col xs-12">
            <% if @contacts.size > 0 %>
              <div id='invitation_modal' >
                <table class="select-project-members-table" id="add_members">
                  <tr class="table-title">
                    <td><%= t 'name' %></td>
                    <td><%= t 'email' %></td>
                    <td>
                      <input type="checkbox" id="checkbox" class="checkbox">
                      <label for="checkbox" class="table-checkbox-label"></label>
                    </td>
                  </tr>
                  <% @contacts.each_with_index do |contact, i| %>
                    <tr class="member">
                      <td class="member-name"><%= contact[:name] %></td>
                      <td class="member-email"><%= contact[:email] %></td>
                      <td>
                        <%= check_box_tag('', contact[:email], false, id: "checkbox_#{i}", class: 'checkbox') %>
                        <label for="checkbox_<%= i %>" class="table-checkbox-label"></label>
                      </td>
                    </tr>
                  <% end %>
                </table>
              </div>
            <% else %>
              <div class="empty-table">
                <span><%= t 'no_contacts' %></span>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="select-project-members-buttons">
      <%= content_tag(:span, t('send'), id: 'send_referral_emails', class: ['btn', 'btn-green']) %>
      <span id='cancel' class='btn btn-white-green cancel'><%= t('cancel') %></span>
    </div>
  </div>
</div>
